{
  "compilerOptions": {
    /*--- core options ---*/
    "target": "ES2020",

    /* Node-style ESM loader */
    "module": "NodeNext",            // ← must match moduleResolution
    "moduleResolution": "NodeNext",

    /* use `import … from "./file.json"` */
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* we run with ts-node, so tell TS not to emit files */
    "noEmit": true,                  // ← enables .ts extension imports

    /* strictness */
    "strict": true,
    "skipLibCheck": true,

    /* global types */
    "types": ["node"]
  },
  "include": ["src/**/*"]
}