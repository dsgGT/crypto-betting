{
  "compilerOptions": {
    // ESM build that ts-node-esm understands
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",

    // allow `import â€¦ from "./file.json"`
    "resolveJsonModule": true,
    // allow `import './config.ts'`
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/**/*"]
}